<%= form_with(model: [:admin, @question, @answer ], local: true) do |form| %>
  <%= form.hidden_field :question_id %>

  <p>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </p>


  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
